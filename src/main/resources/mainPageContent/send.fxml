<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER_RIGHT" prefHeight="310.0" prefWidth="430.0"
      spacing="20"
      xmlns="http://javafx.com/javafx/11.0.14-internal"
      fx:controller="com.email.sys.controllers.MainPageController">
    <padding>
        <Insets left="10" right="10"/>
    </padding>

    <TextField promptText="To:"/>
    <TextArea prefHeight="200.0" prefWidth="200.0" promptText="Enter your text here"/>
    <Button contentDisplay="CENTER" mnemonicParsing="false" styleClass="primary-button" text="Button"/>
</VBox>
